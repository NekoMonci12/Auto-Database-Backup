# Database credentials
DB_USER=user
DB_PASSWORD=password

# Discord webhook for backup notifications
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/changeme # put your own webhook

# Upload method: s3, sftp, ftp, local, or both (for local + external)
UPLOAD_METHOD=s3 # Options: s3, sftp, ftp, local, both

# Local backup path (used if method is local or both)
LOCAL_PATH=/backup/ # Path to backup locally if method is local or both

# SFTP configuration
SFTP_HOST=sftp.example.com
SFTP_PORT=22
SFTP_USER=root
SFTP_PASSWORD=example
SFTP_REMOTE_PATH=/ # Remote directory path on SFTP server

# FTP configuration
FTP_HOST=ftp.example.com
FTP_USER=root
FTP_PASSWORD=example

# S3 configuration
S3_BUCKET=your-bucket-name
S3_ENDPOINT=https://endpoint.com
S3_FORCE_PATH_STYLE=true

AWS_REGION=ap-southeast-1 # ignore if not using aws s3
AWS_ACCESS_KEY_ID=your-access-key-id
AWS_SECRET_ACCESS_KEY=your-secret-access-key